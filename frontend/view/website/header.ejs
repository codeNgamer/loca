<div class="main-menu-bar">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/" title="<%=config.website.product.slogan%>"><%=config.website.product.name%></a>
            </div>
            <div class="collapse navbar-collapse">
                <% if (isRealmSelected) { %>
                <ul class="nav navbar-nav">
                    <li><a class="nav-action" data-id="dashboard" href="#"><i class="fa fa-tachometer"></i> <%= t('Dashboard') %></a></li>
                    <li><a class="nav-action" data-id="rent" href="#"><i class="fa fa-money"></i> <%= t('Rents') %></a></li>
                    <li><a class="nav-action" data-id="occupant" href="#"><i class="fa fa-group"></i> <%= t('Tenants') %></a></li>
                    <li><a class="nav-action" data-id="property" href="#"><i class="fa fa-key"></i> <%= t('Properties') %></a></li>
                    <li><a class="nav-action" data-id="accounting" href="#"><i class="fa fa-table"></i> <%= t('Accounting') %></a></li>
                    <li><a class="nav-action" data-id="owner" href="#"><i class="fa fa-user"></i> <%= t('Landlord') %></a></li>
                </ul>
                <% } %>
                <% if (isRealmSelected) { %>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <% if (isMultipleRealmsAvailable) { %>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= user.firstname + ' ' + user.lastname %> <%if (!isDefaultRealmSelected) {%>@<%= realm.name %> <%}%><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <% for (index=0; index<realms.length; index++) { %>
                                <li>
                                    <a href="#" class='realm-action' data-id="<%=realms[index]._id%>"><i class="fa fa-building-o"></i> <%= realms[index].name %> </a>
                                </li>
                            <% } %>
                            <!--li><a href="/selectrealm"><i class="fa fa-plus"></i> <%= t('New organization') %></a></li>
                            <li role="separator" class="divider"></li-->

                            <li><a href="/logout"><i class="fa fa-sign-out"></i> <%= t('Sign out') %></a></li>
                        </ul>
                        <% } else { %>
                        <a href="#" id="navUserName" class="dropdown-toggle" data-toggle="dropdown"> <%= user.firstname + ' ' + user.lastname %><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/logout"><i class="fa fa-sign-out"></i> <%= t('Sign out') %></a></li>
                        </ul>
                        <% } %>
                    </li>
                </ul>
                <% } else if (isLogged) { %>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= user.firstname + ' ' + user.lastname %><span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/logout"><i class="fa fa-sign-out"></i> <%= t('Sign out') %></a></li>
                        </ul>
                    </li>
                </ul>
                <% } else { %>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/login"><i class="fa fa-sign-in"></i> <%= t('Sign in') %></a></li>
                </ul>
                <% } %>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>
